{
    "Pest Unit Test": {
        "prefix": "test",
        "body": [
            "#[Test]",
            "public function it_${1:tests}(): void",
            "{",
            "$2",
            "}"
        ]
    },
    "Clockin Testfile": {
        "prefix": "ctest",
        "body": [
            "namespace Tests\\ $1;",
            "",
            "use PHPUnit\\Framework\\Attributes\\Test;",
            "use Tests\\TestCases\\TestCase;",
            "",
            "class $2 extends TestCase",
            "{",
            "\t#[Test]",
            "\tpublic function it_$3(): void",
            "\t{",
            "\t\t$4",
            "\t}",
            "}"
        ]
    },
    "@var": {
        "prefix": "@var",
        "body": [
            "/** @var $1 */"
        ]
    }
}
